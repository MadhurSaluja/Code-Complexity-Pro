{
    // Use Black as the default formatter
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
  
    // Set up flake8 as the linter
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
  
    // Configure Black and Flake8 to match our project settings
    "python.formatting.blackArgs": ["--line-length", "88"],
    "python.linting.flake8Args": ["--max-line-length=88", "--ignore=E203,E266,E501,W503"],
  
    // Exclude directories we donâ€™t want to lint or format
    "files.exclude": {
      "**/__pycache__": true,
      "**/.git": true,
      "**/.vscode": true,
      "**/venv": true
    }
  }
  